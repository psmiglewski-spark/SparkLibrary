@page "/companyedit"
@page "/companyedit/{idCompany}"
@using Spark.Invoice.Data.Models;
@using Spark.Invoice.Data.Services;
@inherits CompanyEdit1

@if (!Saved)
{

    <section class="employee-edit">




        <div class="alert @StatusClass">@Message</div>

        <h1 class="page-title">Dane kontrahenta @_company.Name </h1>


        <EditForm Model="@_company" OnSubmit="@HandleValidSubmit">

            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <div class="form-group row">
                <label for="lastName" class="col-sm-3">Nazwa firmy: </label>
                <InputText id="lastName" @bind-Value="@_company.Name" class="form-control col-sm-8" placeholder="Wpisz nazwę"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => @_company.Name)"/>
            </div>

            <div class="form-group row">
                <label for="firstName" class="col-sm-3">NIP: </label>
                <InputText id="firstName" class="form-control col-sm-8" @bind-Value="@_company.NIP" placeholder="NIP"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => @_company.NIP)"/>
            </div>


            <div class="form-group row">
                <label for="firstName" class="col-sm-3">Symbol: </label>
                <InputText id="firstName" class="form-control col-sm-8" @bind-Value="@_company.Short_Name" placeholder="Symbol"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => @_company.Short_Name)"/>
            </div>

            <div class="form-group row">
                <label for="email" class="col-sm-3">Typ klienta: </label>
                <InputText id="email" class="form-control col-sm-8" @bind-Value="@_company.Client_Type" placeholder="Typ"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => @_company.Client_Type)"/>
            </div>

            <div class="form-group row">
                <label for="street" class="col-sm-3">Rabat: </label>
                <InputNumber id="street" class="form-control col-sm-8" @bind-Value="@_company.Discount" placeholder="Rabat"></InputNumber>

            </div>

            <div class="form-group row">
                <label for="zip" class="col-sm-3">Metoda płatności: </label>
                <InputText id="zip" class="form-control col-sm-8" @bind-Value="@_company.Payment_Method" placeholder="Metoda płatności"></InputText>

            </div>

            <div class="form-group row">
                <label for="city" class="col-sm-3">Telefon: </label>
                <InputText id="city" class="form-control col-sm-8" @bind-Value="@_company.Phone_Number" placeholder="Tel."></InputText>

            </div>

            @*<div class="form-group row">
                    <label for="country" class="col-sm-3">Country: </label>
                    <InputSelect id="country" class="form-control col-sm-8" @bind-Value="@CountryId">
                        @foreach (var country in Countries)
                            {
                            <option value="@country.CountryId">@country.Name</option>
                            }

                    </InputSelect>
                </div>*@

            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">Tel. Kom.: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.Mobile_Phone" placeholder="tel.kom"></InputText>
            </div>


            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">email: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.Email" placeholder="e-mail"></InputText>
            </div>


            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">WWW: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.WWW" placeholder="WWW"></InputText>
            </div>

            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">Miasto: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.City" placeholder="miasto"></InputText>
            </div>


            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">Adres: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.Full_Address" placeholder="Adres"></InputText>
            </div>

            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">Kraj: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.Country" placeholder="kraj"></InputText>
            </div>

            <div class="form-group row">
                <label for="phonenumber" class="col-sm-3">Kod pocztowy: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_company.Postal_Code" placeholder="kod pocztowy"></InputText>
            </div>
            @*<div class="form-group row">
                        <label for="longitude" class="col-sm-3">Longitude: </label>
                        <InputNumber id="longitude" class="form-control col-sm-8" @bind-Value="@Employee.Longitude"></InputNumber>
                    </div>

                <div class="form-group row">
                        <label for="latitude" class="col-sm-3">Latitude: </label>
                        <InputNumber id="latitude" class="form-control col-sm-8" @bind-Value="@Employee.Latitude"></InputNumber>
                    </div>

                <div class="form-group row">
                        <label for="smoker" class=" offset-sm-3">
                            <InputCheckbox id="smoker" @bind-Value="@Employee.Smoker"></InputCheckbox>
                            &nbsp;Smoker
                        </label>
                    </div>

                <div class="form-group row">
                        <label for="jobcategory" class="col-sm-3">Job category: </label>
                        <InputSelect id="jobcategory" class="form-control col-sm-8" @bind-Value="@JobCategoryId">
                            @foreach (var jobCategory in JobCategories)
                                {
                                <option value="@jobCategory.JobCategoryId">@jobCategory.JobCategoryName</option>
                                }
                        </InputSelect>
                    </div>

                    <div class="form-group row">
                        <label for="gender" class="col-sm-3">Gender: </label>
                        <InputSelect id="gender" class="form-control col-sm-8" @bind-Value=@Employee.Gender>
                            <option value="@(Gender.Male)">Male</option>
                            <option value="@(Gender.Female)">Female</option>
                            <option value="@(Gender.Other)">Other</option>
                        </InputSelect>
                    </div>

                    <div class="form-group row">
                        <label for="maritalstatus" class="col-sm-3">Marital status: </label>
                        <InputSelect id="maritalstatus" class="form-control col-sm-8" @bind-Value=@Employee.MaritalStatus>
                            <option value="@(MaritalStatus.Single)">Single</option>
                            <option value="@(MaritalStatus.Married)">Married</option>
                            <option value="@(MaritalStatus.Other)">Other</option>
                        </InputSelect>
                    </div>

                <div class="form-group row">
                        <label for="joineddate" class="col-sm-3">Joined on: </label>
                        <InputDate id="joineddate" class="form-control col-sm-8" @bind-Value="@Employee.JoinedDate" placeholder="Enter date joined"></InputDate>
                    </div>

                    <div class="form-group row">
                        <label for="exitdate" class="col-sm-3">Left on: </label>
                        <InputDate id="exitdate" class="form-control col-sm-8" @bind-Value="@Employee.ExitDate" placeholder="Enter exit date"></InputDate>
                    </div>

                <div class="form-group row">
                        <label for="comment" class="col-sm-3">Comment: </label>
                        <InputTextArea id="comment" class="form-control col-sm-8" @bind-Value="@Employee.Comment" placeholder="Enter comment"></InputTextArea>
                        <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Employee.Comment)" />*@
            @*</div>*@

            <button type="submit" class="btn btn-primary edit-btn">Zapisz</button>

            @if (_company.Id > 0)
            {
                <a class="btn btn-danger" @onclick="@DeleteCompany">
                    Usuń
                </a>
            }

        </EditForm>


    </section>
}
else
{
        <div class="alert @StatusClass">@Message</div>
        <a class="btn btn-outline-primary" @onclick="@NavigateToOverview">Powrót</a>

    }